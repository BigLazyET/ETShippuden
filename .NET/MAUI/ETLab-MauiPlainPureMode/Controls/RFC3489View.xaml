<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ETLab_MauiPlainPureMode.Conveters"
             x:Class="ETLab_MauiPlainPureMode.Controls.RFC3489View">

    <StackLayout.Resources>
        <converters:IPEndPointToStringConverter x:Key="IPEndPointToStringConverter" />
    </StackLayout.Resources>
    
    <ScrollView>
        <StackLayout>
            <ContentPresenter />
            <Label Text="NAT Type" />
            <Entry IsEnabled="False"
                   Text="{TemplateBinding Path=NATCheck3489Outcome.NATTYPE}" />
            <Label Text="Local IPEndPoint" />
            <Entry IsEnabled="False"
                   Text="{TemplateBinding Path=NATCheck3489Outcome.Test}" />
            <Label Text="Public IPEndPoint" />
            <Entry IsEnabled="False"
                   Text="{TemplateBinding Path=NATCheck3489Outcome.PublicIPEndPoint, Converter={StaticResource IPEndPointToStringConverter}}" />
        </StackLayout>
    </ScrollView>
    
</StackLayout>
